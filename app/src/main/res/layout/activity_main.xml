<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        style="@style/InputText"
        android:id="@+id/calculatorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:text="INPUT"
        android:textAlignment="textEnd"
        android:textSize="48sp"
        android:height="263dp"
        tools:ignore="HardcodedText,RtlCompat"/>

    <TextView
        style="@style/OutputText"
        android:id="@+id/calculatorOutputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:text="OUTPUT"
        android:textAlignment="textEnd"
        android:textSize="29dp"
        tools:ignore="HardcodedText,RtlCompat,SpUsage" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#252525" />

    <LinearLayout
        style="@style/UpperButtonLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_minus"
            style="@style/MinusButton"
            android:layout_height="match_parent"
            android:text="@string/Minus"/>

        <Button
            android:id="@+id/button_viewMode"
            style="@style/ModeButton"
            android:layout_height="match_parent"
            android:text="rad"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_2nd"
            style="@style/ModeButton"
            android:layout_height="match_parent"
            android:text="2nd"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_co"
            style="@style/ModeButton"
            android:layout_height="match_parent"
            android:text="co"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/button_clear"
            style="@style/RemoveButton"
            android:layout_height="match_parent"
            android:text="@string/Clear" />

    </LinearLayout>

    <LinearLayout
        style="@style/ButtonLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_number7"
            style="@style/NumberButton"
            android:layout_height="match_parent"
            android:text="@string/Number7" />

        <Button
            android:id="@+id/button_number8"
            style="@style/NumberButton"
            android:layout_height="match_parent"
            android:text="@string/Number8" />

        <Button
            android:id="@+id/button_number9"
            style="@style/NumberButton"
            android:layout_height="match_parent"
            android:text="@string/Number9" />

        <Button
            android:id="@+id/button_backspace"
            style="@style/RemoveIconButton"
            android:layout_height="match_parent"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/backspace_icon"
            android:drawableTint="#FDFDFD"
            tools:ignore="RtlHardcoded,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        style="@style/ButtonLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_number4"
            style="@style/NumberButton"
            android:layout_height="match_parent"
            android:text="@string/Number4" />

        <Button
            android:id="@+id/button_number5"
            style="@style/NumberButton"
            android:layout_height="match_parent"
            android:text="@string/Number5" />

        <Button
            android:id="@+id/button_number6"
            style="@style/NumberButton"
            android:layout_height="match_parent"
            android:text="@string/Number6" />

        <Button
            android:id="@+id/button_sin"
            style="@style/FunctionButton"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sin"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        style="@style/ButtonLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_number1"
            style="@style/NumberButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="@string/Number1" />

        <Button
            android:id="@+id/button_number2"
            style="@style/NumberButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="@string/Number2" />

        <Button
            android:id="@+id/button_number3"
            style="@style/NumberButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="@string/Number3" />

        <Button
            android:id="@+id/button_tan"
            style="@style/FunctionButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="tan"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        style="@style/ButtonLinearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_PI"
            style="@style/NumberButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/PI" />

        <Button
            android:id="@+id/button_number0"
            style="@style/NumberButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="@string/Number0" />

        <Button
            android:id="@+id/button_comma"
            style="@style/NumberButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="@string/Comma"/>

        <Button
            android:id="@+id/button_sec"
            style="@style/FunctionButton"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sec"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

</LinearLayout>